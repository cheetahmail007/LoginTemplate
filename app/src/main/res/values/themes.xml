<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemplatesOfLoginApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="EntryTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:backgroundTint">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/primary_text_color</item>
    </style>

    <style name="SigninTextEntry" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/signin_text_color</item>
        <item name="android:textColorHint">@color/signin_text_color</item>
    </style>
</resources>